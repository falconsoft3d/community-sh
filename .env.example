# Ejemplo de archivo .env para producción
# Copia este archivo a .env y modifica los valores

# Django Settings
DJANGO_SECRET_KEY=cambia-esto-por-una-clave-super-secreta-aleatoria-de-50-caracteres
DEBUG=False
ALLOWED_HOSTS=tudominio.com,www.tudominio.com

# Database (opcional - por defecto usa SQLite)
# Para producción se recomienda PostgreSQL
# DATABASE_URL=postgresql://usuario:password@localhost:5432/communitysh

# Email Settings (opcional - para notificaciones)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu@email.com
# EMAIL_HOST_PASSWORD=tu_password_de_aplicacion

# Security (solo para producción)
# SSL/HTTPS - Si está activo fuerza HTTPS, si no permite HTTP
ENABLE_SSL=False

# Nota: Las siguientes configuraciones se controlan automáticamente por ENABLE_SSL
# SECURE_SSL_REDIRECT se activará si ENABLE_SSL=True
# SESSION_COOKIE_SECURE se activará si ENABLE_SSL=True
# CSRF_COOKIE_SECURE se activará si ENABLE_SSL=True

# Configuraciones adicionales de SSL (opcional)
# Rutas que no deben redirigir a HTTPS (separadas por comas)
# SSL_REDIRECT_EXEMPT=/health,/status

# Forzar HTTP cuando SSL está deshabilitado (solo desarrollo/testing)
# FORCE_HTTP_WHEN_SSL_DISABLED=False

